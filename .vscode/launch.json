{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WEB",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "args": [
                "frontend.app:app",
                "--reload",
                "--port",
                "5000",
                "--host",
                "127.0.0.1"
            ],
            "justMyCode": false
        },
        {
            "name": "API Server",
            "request": "launch",
            "type": "debugpy",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "args": [
                "backend.api:app",
                "--reload",
                "--port",
                "8000",
                "--host",
                "127.0.0.1"
            ],
            "justMyCode": false
        },
        {
            "name": "Discord Bot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/discord_bot/app.py",
            "console": "integratedTerminal",
            "args": [],
            "justMyCode": true
        }
    ]
}
